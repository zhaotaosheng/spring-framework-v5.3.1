<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="person" class="com.taozi.day08.entity.Person">
		<property name="id" value="1"/>
		<property name="name" value="桃子"/>
		<lookup-method name="getAddress" bean="address"/>
		<replaced-method name="say" replacer="customReplace">
			<arg-type match="java.lang.String"/>
		</replaced-method>
	</bean>
	<bean id="address" class="com.taozi.day08.entity.Address" scope="prototype"/>
	<bean id="customReplace" class="com.taozi.day08.entity.Replacer"/>
</beans>